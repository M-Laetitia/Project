{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}

    <h1>Dashboard</h1>

    <h2>Event:</h2>

    <p>List:</p>

        {% for event in events %}
            <p>✦{{event.name}}| {{event.status}} | {{event.nbPlace}} </p> 
            <p>Actions : 
                <a href="{{ path('edit_event', {'id': event.id}) }}">edit</a>
            <br>/ delete / open / lock / unlock / Archive / </p>
            <p>add picture</p>
            <hr>
        {% endfor %}

        <p>ongoing event</p>
        <p>scheduled event</p>
        <p>previous event</p>

    <p><a href="{{ path('new_event') }}">add an event:</a></p>
    

    <h2>Expo</h2>

    <h2>Space/equipment</h2>

    <h2>Workshop</h2>

    {% for workshop in workshops %}
        <p>✦{{workshop.name}}|| {{workshop.nbRooms}} </p> 
        {{workshop.startDate|formatDate}}  -  {{workshop.endDate|formatDate}} 
        <p>Actions : 
            {# <a href="{{ path('edit_workshop', {'id': workshop.id}) }}">edit</a> #}
        <br>/ delete / open / lock / unlock / Archive / </p>
        <p>add picture</p>
        <hr>
    {% endfor %}



{% endblock %}
