{% extends 'base.html.twig' %}

{% block title %}Event participation{% endblock %}
{% block meta %}Event participation{% endblock %}

{% block body %}

<div class="banner">
    <div class="content">
        <h1 class="banner-title">{{area.name}}</h1>
        <div class="subtitle">
            <p class="banner-text">Subtitle</p>
            <div class="underscore-blink"> </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #151515;
    }
</style>

<div class="breadcrumb breadcrumb-light">
    <p><a href="{{ path('app_homepage') }}">Home </a> >  <a href="{{ path('app_event') }}">All Events</a> > <a href="{{ path('show_event', { slug : area.slug  }) }}">{{area.name}}</a> > Reservation</p>
</div>


<section class="content participation-content" id="register-user">
    <div id="register-container">
        <div id="separator">

        </div>
        <div class="left-register" id="l-participation">
         
        </div>

        <div class="right-register" id="r-participation">
            <div id="title-register">
                <h2>Make a reservation<span class="underscore">_</span></h2>
                <p><span id="name">{{area.name}}</span><span id="pipe-separator">|</span> {{area.startDate|formatDate}} - {{area.startDate|date('H:i')}}</p>
            </div>

            <div id="form-register">

                {{ form_start(formSendParticipation)}}
                    {{ form_errors(formSendParticipation)}}
                    {{ form_row(formSendParticipation.firstname)}}
                    {{ form_row(formSendParticipation.lastname)}}
                        {{ form_row(formSendParticipation.submit, { 'attr' : { 'class': 'btn btn6' } })}}
                {{ form_end(formSendParticipation)}}

            </div>
        </div>
    </div>
</section>

{# <script src= "{{ asset('js/gsap.min.js') }}"></script> #}

<script>

    gsap.from("#register-user", {
        opacity: 0, 
        duration: 1.2, 
        ease: "easeInOut", 
        delay: 0.8
    });

    gsap.from("#l-participation", {
        opacity: 0, 
        duration: 1.6, 
        ease: "easeInOut", 
        delay: 1.5
    });

    gsap.from("#r-participation", {
        opacity: 0, 
        duration: 1.6, 
        ease: "easeInOut", 
        delay: 1.7
    });

    gsap.from("#separator", {
        x : 100,
        opacity: 0, 
        duration: 1.6, 
        ease: "easeInOut", 
        delay: 2
    });


    document.addEventListener('DOMContentLoaded', function() {
        const inputs = document.querySelectorAll('#form-register input');
        
        inputs.forEach(function(input) {
            if (!input.matches('#terms-register input')) {
                 input.addEventListener('focus', function() {
                     this.style.borderColor = '#f0bd2f'; 
                     this.previousElementSibling.style.color = '#f0bd2f'; 
                 });

                 input.addEventListener('blur', function() {
                     this.style.borderColor = '#939393'; 
                     this.previousElementSibling.style.color = ''; 
                 });
             }
        });
    });
</script>


{% endblock %}
