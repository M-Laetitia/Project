    <script>
        $(document).ready(function(){
            // Initialize variables to keep track of current slide and total slides
            var currentSlide = 0;
            var totalSlides = $('.slide').length;
        
            // Hide all slides initially
            $('.slide').hide();
        
            // After a delay of 1s, show the first slide and start changing slides every 3 seconds
            setTimeout(function() {
                // Show the first slide
                $('.slide').eq(0).show();
                // Set interval to call the nextSlide function every 3000 ms
                setInterval(nextSlide, 3000);
            }, 1000);
        
            // Function to transition to the next slide
            function nextSlide() {
                // Hide the current slide
                $('.slide').eq(currentSlide).hide();
                // Calculate the index of the next slide (cycling back to 0 if reaching the end)
                currentSlide = (currentSlide + 1) % totalSlides;
                // Show the next slide
                $('.slide').eq(currentSlide).show();
            }
        });
       
    </script>
