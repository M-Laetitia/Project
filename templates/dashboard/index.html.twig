                </div>
                <p class="text-n3"><i class="fa-solid fa-circle-chevron-down"></i></span></p>
                                
                <div class="ongoing">
                    {% for studio in studios %}
                    <div class="element">
                        <p>
                            <a href="{{ path('show_studio_admin', {slug : studio.slug}) }}"><span class="name">âœ¦{{studio.name}}</span></a>
                        </p>
