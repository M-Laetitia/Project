{% extends 'base.html.twig' %}

{% block title %}Membership Subscriptions - MOSAIC{% endblock %}
{% block meta %}Explore our membership subscription options on MOSAIC. Gain exclusive access to member-only events, workshops, and artistic studio rentals. Unlock a world of creativity and opportunities. Choose your subscription plan and join our vibrant artistic community today{% endblock %}

{% block body %}

<style>
    body {
        background-color: #151515;
    }
</style>


<div class="banner">
    <div class="content">
        <h1 class="banner-title">SUBSCRIPTIONS</h1>
        <div class="subtitle">
            <p class="banner-text">Subtitle</p>
            <div class="underscore-blink"> </div>
        </div>
    </div>
</div>

<div class="breadcrumb breadcrumb-light">
    <p><a href="{{ path('app_homepage') }}">Home </a> > All Subscriptions </p>
</div>

{% if app.user %}
    {% if user.subscriptions is not empty %}
        {% set hasActiveSubscription = false %}
        {% for subscription in user.subscriptions %}
            {% if subscription.isActive == true %}
                {% set hasActiveSubscription = true %}
                {# The user has an active subscription #}

                <section class="content" id="subscription-page">
                    <p id="text-subscription" class="text-n2">You already have an ongoing subscription.</p>
                    <div class="subscription-cards ongoing-subscription">
                        {% for subscription in subscriptions %}
                            <div class="subscription-card" id="{{ subscription.id }}">
                                <h2 class="text-n2">{{ subscription.name }}</h2>
                    
                                <div class="image">
                                </div>
                    
                                <p class="">{{ subscription.price}} €</p>
                                <p>per {{ subscription.dueDate}}</p>
                    
                                <div class="subscription-btn">
                                </div>
                    
                            </div>
                        {% endfor %}
                    </div>
                </section>

            {% endif %}
        {% endfor %}
        
        {% if not hasActiveSubscription %}
            {# The user doesn't have any active subscriptions  #}  
                <section class="content" id="subscription-page">
                    <div class="subscription-cards">
                        {% for subscription in subscriptions %}
                            <div class="subscription-card" id="{{ subscription.id }}">
                                <h2 class="text-n2">{{ subscription.name }}</h2>
                    
                                <div class="image">
                                </div>
                    
                                <p class="">{{ subscription.price}} €</p>
                                <p>per {{ subscription.dueDate}}</p>
                    
                                <div class="subscription-btn">
                                    <a href="{{ path('subscription_payment', {slug: subscription.slug}) }}"><div class="btn btn6">SUBSCRIBE</div></a> 
                                </div>
                    
                            </div>
                        {% endfor %}
                    </div>
                </section>
        {% endif %}
    {% else %}
        {# The user doesn't have any subscriptions  #}
            <section class="content" id="subscription-page">
                <div class="subscription-cards">
                    {% for subscription in subscriptions %}
                        <div class="subscription-card" id="{{ subscription.id }}">
                            <h2 class="text-n2">{{ subscription.name }}</h2>
                
                            <div class="image">
                            </div>
                
                            <p class="">{{ subscription.price}} €</p>
                            <p>per {{ subscription.dueDate}}</p>
                
                            <div class="subscription-btn">
                                <a href="{{ path('subscription_payment', {slug: subscription.slug}) }}"><div class="btn btn6">SUBSCRIBE</div></a> 
                            </div>
                
                        </div>
                    {% endfor %}
                </div>
            </section>
    {% endif %}
{% endif %}



  <script src= "{{ asset('js/gsap.min.js') }}"></script>
   
<script>
    const subscriptionCards = document.querySelectorAll('.subscription-card');

    gsap.from('#text-subscription', 1.2, {opacity: 0, delay: 0.6 });
    
    function animateSubscriptionCards() {
        subscriptionCards.forEach((card, index) => {
            gsap.to(card, {
                opacity: 1, 
                y: 0, 
                duration: 1, 
                ease: "power2.out", 
                delay: index * 0.2, 
            });
    
            
            card.addEventListener('mouseenter', () => {
                gsap.to(card, {
                    scale: 1.05, 
                    duration: 0.3, 
                });
            });
    
            card.addEventListener('mouseleave', () => {
                gsap.to(card, {
                    scale: 1, 
                    duration: 0.3, 
                });
            });
        });
    }
    
    document.addEventListener("DOMContentLoaded", function() {
        animateSubscriptionCards();
    });


</script>



{% endblock %}
