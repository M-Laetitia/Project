{% extends 'base.html.twig' %}

{% block title %}detail workshop{% endblock %}
{% block meta %}detail workshop{% endblock %}


{% block body %}

<div class="banner">
    <div>
        <h1 class="banner-title">{{workshop.name}}</h1>
        <p class="banner-text">Text text<span class="underscore-static">_</span></p>
    </div>
</div>

<section class="" id="event-show">
    <div id="header">
            <figure>
                    <img src="{{ asset('images/workshop_img.jpg') }}" alt="">
            </figure>
            <div id="quote">
                    <span id="quote-style"><</span>
                    <p id="quote-text"> {{workshop.quote}}</p>
                    <span id="quote-style">></span>
            </div>
    </div>
    
    <div id="details-event">
            <div id="about-event">
                    <h3 class="text-n1">About the <span id="subtitle">{{workshop.name}}</span><span class="underscore">_</span></h2>
                    <p>{{workshop.detail}}</p>
            </div>

            <div id="info">
                    <p class="text-n2">Info<span id="info-underscore">_</span></p>
                    <div id="list-infos">
                            <div id="list-info-workshop">

                                    <div >
                                            <span>Date : </span>  <span></span> <p>{{workshop.startDate|formatDate}} - {{workshop.endDate|formatDate}}</p>
                                    </div>

                                    {# <div>
                                            <span style="visibility:hidden;">Date : </span>  <span></span> <p>{{workshop.endDate|formatDate}} <span> - </span> {{workshop.endDate|date('H:i')}}</p>
                                    </div> #}

                                    <div><span>Capacity :</span> <span></span> <p> {{workshop.nbRegistrationMade}} / {{ workshop.nbRooms}}  </p> </div>

                                    <div><span>Modules :</span> <span></span>
                                         <p> 
                                            {% set counter = 0 %}
                                            {% for programme in workshop.programmes %}
                                            {% set counter = counter + 1 %}
                                            {% endfor %}
                                            {{ counter}}
                                        </p> 
                                    </div>
                                    
                                    <div><span>Time :</span> <span></span> <p>  </p> </div>
            

                                    {# <div><span>nb modules :</span> <span></span> <p> {{ workshop.programmes.NbLessons}} </p> </div> #}

                                    
                                    
                                    <div><span>Status :</span> <span></span> 
                                            <div>
                                                <span class="status {{ workshop.status == 'OPEN' ? 'open' : 
                                                (workshop.status == 'CLOSED' ? 'closed' : 
                                                (workshop.status == 'PENDING' ? 'pending' : 
                                                (workshop.status == 'ARCHIVED' ? 'archived' : 'status-default'))) }}">
                                                {{ workshop.status }}
                                                </span>
                                            </div> 
                                    </div>
                                    
                                    
                            </div>
                    </div>
            </div>

            {# {% if existingParticipation %}
                    <div id="expo-participate">
                            <div id="btn-event">
                                    <div class="button btn-off">PARTICIPATE</div>
                            </div>
                            <p>You are already participating in this exhibition.</p>
                    </div>
                    
            {% else %}  
                    {% if workshop.nbReversationRemaining == 0 and workshop.status == 'CLOSED' %}

                    <div id="expo-participate">
                            <div id="btn-event">
                                    <div class="button btn-off">PARTICIPATE</div>
                            </div>
                            <p>No more space available for this exhibition.</p>
                    </div>
                            
            {% elseif workshop.status == 'OPEN' %}
                    <div id="expo-participate"> #}
                            {# <a href="{{ path('new_exposition_participation', {'id': workshop.id }) }}"></a> #}
                            {# <div id="btn-event">
                                    <div id="btn-participate-expo" class="button btn6">PARTICIPATE</div>
                            </div>
                    </div>
                    {% endif %}
            {% endif %} #}

        
    </div>  

    <div id="modules-workshop">
        <p class="text-n2">Modules<span id="info-underscore">_</span></p>
        <div id="modules-list">
            {% set counter = 1 %}
            {% for programme in workshop.programmes %}
            
            <div class="module-details">
                <div>
                    <p>0{{ counter }}.</p> 
                    <p></p>
                    <p>{{ programme.lesson.name }} - </p>
                </div>
                <p>{{programme.startDate|formatDate}}<span> | </span></p>  
                <p>{{programme.startDate|date('H:i')}} - {{programme.endDate|date('H:i')}} </p>
            </div>
                {% set counter = counter + 1 %}
            {% endfor %}
        </div>
    </div>


</section>



    {% if app.user %}
    {% if user.subscriptions is not empty %}
        {% set hasActiveSubscription = false %}
        {% for subscription in user.subscriptions %}
            {% if subscription.isActive %}
                {% set hasActiveSubscription = true %}
            {% endif %}
        {% endfor %}
        
        {% if hasActiveSubscription %}
            {% if workshop.status != 'ARCHIVED' %}
                {% if workshop.status == 'PENDING' or workshop.status == 'CLOSED'  %}
                    <p>Registration will open soon</p>
                {% else %}
                    <p>Do you want to participate?<br>
                    {% if existingRegistration %}
                        <p>You are already participating</p>
                    {% elseif workshop.nbRegistrationRemaining == 0 and workshop.status == 'CLOSED' %}
                        <p>No more space available for this workshop</p>
                    {% elseif workshop.status == 'OPEN' %}
                    <p>valid subscription</p>
                        <a href="{{ path('new_workshop_registration', {'id': workshop.id }) }}">Click here!</a></p>
                    {% endif %}
                    </p>
                {% endif %}
            {% endif %}
        {% else %}
            {# Content for user without an active subscription #}
            <p>You must have a valid subscription to benefit from this service.</p>
            <p><a href="{{ path('app_subscription') }}">Check here!</a></p>
        {% endif %}
    {% else %}
        {# Content for user without any subscriptions #}
        <p>You must have signed up for a subscription to benefit from this service.</p>
        <p><a href="{{ path('app_subscription') }}">Check here!</a></p>
    {% endif %}
{% endif %}



<script src= "{{ asset('js/gsap.min.js') }}"></script>
<script src= "{{ asset('js/pagesShow.js') }}"></script>

{% endblock %}
