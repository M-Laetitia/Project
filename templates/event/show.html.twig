{% extends 'base.html.twig' %}

{% block title %}{{area.name}} - MOSAIC {% endblock %}
{% block meta %}Discover the details of our upcoming artistic event on MOSAIC. Explore the theme, objectives, and highlights, and prepare to share, discover, and connect with fellow art enthusiasts. Click below to register and secure your spot. Learn more about {{area.name}} now!{% endblock %}

{% block body %}


<div class="banner">
    <div class="content">
        <h1 class="banner-title">{{area.name}}</h1>
        <div class="subtitle">
            <p class="banner-text">Subtitle</p>
            <div class="underscore-blink"> </div>
        </div>
    </div>
</div>

<div class="breadcrumb breadcrumb-dark">
    <p><a href="{{ path('app_homepage') }}">Home </a> >  <a href="{{ path('app_event') }}">All Events</a> > {{area.name}} </p>
</div>

<section class="" id="event-show">
    <div id="header">
        <figure>
            <img src="{{ asset('images/event_img.jpg') }}" alt="">
        </figure>
        <div id="quote">
            <span id="quote-style"><</span>
            <p id="quote-text">{{area.quote}}</p>
            <span id="quote-style">></span>
        </div>
    </div>

    <div id="details-event">
        <div id="about-event">
            <h3 class="text-n1">About the <span id="subtitle">{{area.name}}</span><span class="underscore">_</span></h2>
            <p>{{area.detail}}</p>
        </div>
    

        <div id="info">
            <p class="text-n2">Info<span id="info-underscore">_</span></p>
            <div id="list-infos">
                <div id="list-info">

                    <div>
                        <span>Date : </span>  <span></span> <p>{{area.startDate|formatDate}} <span> - </span> {{area.startDate|date('H:i')}}</p>
                    </div>

                    {# <div>
                        <span style="visibility:hidden;">Date : </span>  <span></span> <p>{{area.endDate|formatDate}} <span> - </span> {{area.endDate|date('H:i')}}</p>
                    </div> #}

                    <div><span>Capacity :</span> <span></span> <p>{{area.nbReversationMade}}  / {{ area.nbRooms}}  </p> </div>

                    <div><span>Status :</span> <span></span> 
                            <div>
                                    <span class="status {{ area.status == 'OPEN' ? 'open' : 
                                    (area.status == 'CLOSED' ? 'closed' : 
                                    (area.status == 'PENDING' ? 'pending' : 
                                    (area.status == 'ARCHIVED' ? 'archived' : 'status-default'))) }}">
                                    {{ area.status }}
                                    </span>
                            </div> 
                    </div>

                    <div><span>Access :</span> <span></span> <p>{{area.access}}  </p> </div>
                    
                    
                </div>
            </div>
        </div>


        {% if app.user %}
            {% if existingParticipation %}
                    <div id="expo-participate">
                            <div id="btn-event">
                                <div class="button btn-off">PARTICIPATE</div>
                            </div>
                            <p>You are already participating in this event.</p>
                    </div>
            {% endif %}
        {% endif %}
        
        {% if area.nbReversationRemaining == 0 and area.status == 'CLOSED' %}
            <div id="expo-participate">
                    <div id="btn-event">
                            <div class="button btn-off">PARTICIPATE</div>
                    </div>
                    <p>No more space available for this event.</p>
            </div>
        {% elseif area.status == 'CLOSED' %}
        <div id="expo-participate">
            <div id="expo-participate">
                <div id="btn-event">
                        <div class="button btn-off">PARTICIPATE</div>
                </div>
                <p>This event is closed.</p>
            </div>
        </div>
        {% elseif area.status == 'OPEN' %}
            {% if area.access == 'private' and not app.user %}
                {# user is not login and the event is private #}
                <div id="expo-participate">
                    <div id="btn-event">
                        <div class="button btn-off">PARTICIPATE</div>
                    </div>
                    <p>You must be logged in to participate in this event.</p>
                </div>
            {% else %}
                <div id="expo-participate">
                    <div id="btn-event">
                        <a href="{{ path('new_event_participation', {'id': area.id }) }}"><div id="btn-participate-expo" class="button btn6">PARTICIPATE</div></a>
                    </div>
                </div>
            {% endif %}
        {% endif %}
        
       
            
       


    </div>

</section>
        {% if area.status == 'ARCHIVED' %}
            <p>pictures</p>
        {% endif %}



    {# {% if area.status != 'ARCHIVED' %}
        {% if area.status == 'PENDING' %}
            <p>Registration will open soon</p>
        {% else %}
            <p>Do you want to participate ?<br>
            {% if existingParticipation %}
                <p>You are already participating</p>
            {% elseif area.nbReversationRemaining == 0 and area.status == 'CLOSED' %}
                <p>No more space available for this exhibition</p>
            {% elseif area.status == 'OPEN' %}
                <a href="{{ path('new_event_participation', {'id': area.id }) }}">Click here!</a></p>
            {% endif %}
            
            </p>
        {% endif %}
    {% endif %} #}

    <script src= "{{ asset('js/gsap.min.js') }}"></script>
    <script src= "{{ asset('js/pagesShow.js') }}"></script>

{% endblock %}
