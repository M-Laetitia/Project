{% extends 'base.html.twig' %}

{% block title %}Art Workshops - MOSAIC{% endblock %}
{% block meta %}Discover creativity with art workshops on MOSAIC. Engaging sessions to inspire and cultivate talents.  Explore our workshops now!{% endblock %}

{% block body %}

<div class="banner">
    <div class="content">
        <h1 class="banner-title">OUR WORKSHOPS</h1>
        <div class="subtitle">
            <p class="banner-text">Be adventurous</p>
            <div class="underscore-blink"> </div>
        </div>
        
    </div>
</div>

<div class="breadcrumb breadcrumb-dark">
    <p><a href="{{ path('app_home') }}">Home </a> > All Workshops </p>
</div>

<section class="content" id="events-index">
    {% for workshop in ongoingWorkshop %}

        <div class="container-event">
            <div id="picture-event">
                {% for picture in workshop.pictures %}
                <figure>
                    <a href="{{ path('show_workshop', { slug : workshop.slug  }) }}">
                    <img src="{{ asset('images/activity/workshop/' ~ workshop.id ~ '/banner/' ~ picture.path) }}" alt="{{ picture.altDescription }}"></a>
                </figure>
                 {% endfor %}
            </div>
            <div id="infos-event">
                <h2 class="text-n1">{{workshop.name}}<span class="">_</span></h2>
                <p id="resume-event">{{workshop.description}}</p>
                <div id="details-event">
                    <p><span>Date : </span> {{workshop.startDate|formatDate}} <span>|</span> {{workshop.startDate|date('H:i')}} - {{workshop.endDate|date('H:i')}}</p> 
                    <p><span>Statut : </span>
                    
                        <span class="status {{ workshop.status == 'OPEN' ? 'open' : 
                        (workshop.status == 'CLOSED' ? 'closed' : 
                        (workshop.status == 'PENDING' ? 'pending' : 
                        (workshop.status == 'ARCHIVED' ? 'archived' : 'status-default'))) }}">
                        {{ workshop.status }}
                        </span>

                    </p>
                    <p><span>Capacity : </span> {{workshop.nbRegistrationMade}}  /  {{workshop.nbRooms}}</p>

                </div>
                <div id="btn-event">
                    <div class="button btn6"><a href="{{ path('show_workshop', { slug : workshop.slug  }) }}">SEE MORE</a></div>
                    
                </div>
            </div>
        </div>
    {% endfor %}

</section>

<div id="previous-link">
    <p class="past-event-btn"><i class="ri-eye-close-fill"></i></p>
    <div>
        <p>To see all our previous workshops </p>
        <a href="{{ path('app_archives')}}">check here <i class="ri-arrow-right-double-fill"></i> </a> 
    </div>
</div>


    <script src= "{{ asset('js/gsap.min.js') }}"></script>
    <script src= "{{ asset('js/pagesShow.js') }}"></script>

{% endblock %}
