{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <style>
        body {
            background-color: #151515;
        }
    </style>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <div class="banner">
        <div class="content">
            <h1 class="banner-title">SIGN UP</h1>
            <div class="subtitle">
                <p class="banner-text">Become a member</p>
                <div class="underscore-blink"> </div>
            </div>
        </div>
    </div>
        
    
    <section class="content" id="register-user">
    
        <div id="register-container">
            <div id="separator">

            </div>
            <div class="left-register" id="l-register">
                
            </div>

            <div class="right-register" id="r-register">
                <div id="title-register">
                    <h2>SIGN UP<span class="underscore">_</span></h2>
                    <p>to become a fragment of Mosaic</p>
                </div>

                <div id="form-register">
                    {{ form_start(registrationForm) }}
                    {{ form_errors(registrationForm) }}
                    
                        
                        {{ form_row(registrationForm.email) }} 
                        {{ form_row(registrationForm.information) }}
                        {{ form_row(registrationForm.username) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                
                    <div id="terms-register">
                        {{ form_label(registrationForm.agreeTerms) }}
                        <p>
                            <a href="#">Terms of use</a> <span>|</span> <a href="#">Privacy Policy</a>
                            {{ form_errors(registrationForm.agreeTerms) }}
                            {{ form_widget(registrationForm.agreeTerms) }}
                        </div>
                        
                    </div>

                    <button type="submit" class="btn btn6" id="btn-register">Register</button>
                    {{ form_end(registrationForm) }}
                    
                    <div id="login">
                        <p>Already have an account ? <a href="{{ path('app_login') }}">Log in.</a></p>
                    </div>

                </div>
                
            </div>
        </div>

    </section>
    
  <script src= "{{ asset('js/gsap.min.js') }}"></script>
       
  <script>
    gsap.from("#register-user", {
        opacity: 0, 
        duration: 1.2, 
        ease: "easeInOut", 
        delay: 0.8
    });

    gsap.from("#l-register", {
        opacity: 0, 
        duration: 1.6, 
        ease: "easeInOut", 
        delay: 1.5
    });

    gsap.from("#r-register", {
        opacity: 0, 
        duration: 1.6, 
        ease: "easeInOut", 
        delay: 1.7
    });

    gsap.from("#separator", {
        x : 100,
        opacity: 0, 
        duration: 1.6, 
        ease: "easeInOut", 
        delay: 2
    });

    document.addEventListener('DOMContentLoaded', function() {
        const inputs = document.querySelectorAll('#form-register input');
        
        inputs.forEach(function(input) {
            if (!input.matches('#terms-register input')) {
                 input.addEventListener('focus', function() {
                     this.style.borderColor = '#f0bd2f'; 
                     this.previousElementSibling.style.color = '#f0bd2f'; 
                 });
         
                 //blur event is triggered when the input field loses focus
                 input.addEventListener('blur', function() {
                     this.style.borderColor = '#939393'; 
                     this.previousElementSibling.style.color = ''; 
                 });
             }
        });
    });
  </script>


    

    

   
{% endblock %}
